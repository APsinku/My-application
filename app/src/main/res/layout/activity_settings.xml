<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="abhi.osmchat.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:src="@drawable/default_avatar" />


    <TextView
        android:id="@+id/settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="UserName"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/settings_image"
        />


    <EditText
        android:id="@+id/name_input"
        android:layout_width="270dp"
        android:layout_height="33dp"
        android:layout_below="@+id/settings_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="@drawable/bg"
        android:hint="Change Name" />


    <Button
        android:id="@+id/settings_name_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settings_status_btn"
        android:layout_alignStart="@+id/settings_status_btn"
        android:backgroundTint="@android:color/white"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Change Name"
        android:textColor="#262525" />


    <Button
        android:id="@+id/settings_status_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/settings_image"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp"
        android:backgroundTint="@color/colorAccent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="CHANGE STATUS"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="@string/default_status"
        android:textColor="@android:color/white" />

</RelativeLayout>
